{{#if session.signed_in }}
  {{#if session.submitted }}
    <li><span class="label label-info">Application Submitted</span></li>
  {{else}}
    <li><span class="label label-success">Application In Progress</span></li>
  {{/if}}
  <li><a href="#">{{session.email}}</a></li>
  <li>{{#linkTo documents}}My Documents{{/linkTo}}</li>
  <li><a href="/users/sign_out" data-method="delete" rel="nofollow">sign out</a></li>
{{else}}
  <li><a href="/users/sign_up">sign up</a></li>
  <li><a href="/users/sign_in">sign in</a></li>
{{/if}}