<h4>Additional notes or comments you would like to submit along with your application:</h4>
{{#if session.submitted}}
  <p>{{session.note}}</p>
{{else}}
  <div class="control-group" {{bindAttr class="session.isDirty:warning"}}>
    <div class="controls">
      {{view Ember.TextArea valueBinding="session.note" class="span8" name="submit_note" rows="6" }}
      <br />
      {{#if session.isDirty}}
        <a href="#" class="btn btn-warning" id="save_changes" {{action commitData}}>save changes</a>
      {{/if}}
    </div>
  </div>
{{/if}}