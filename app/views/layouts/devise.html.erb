<!DOCTYPE html>
<html>
<head>
  <title>ZapplyLite</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>


</head>
<body class="gradient">
<div class="container">
  <div class="row">
    <% if notice %>
      <div class="alert alert-info">
        <button class="close" type="button" data-dismiss="alert"> &times;</button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-info">
        <button class="close" type="button" data-dismiss="alert"> &times;</button>
        <%= alert %>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>
</body>
</html>
